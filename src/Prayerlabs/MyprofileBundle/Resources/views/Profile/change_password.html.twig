{% extends 'PrayerlabsMyprofileBundle::layout.html.twig' %}
{% block title %}Change Password{% endblock %}
{% block body %}
    <div class="mainWrapper clearfix">
        <img class="logo" src="{{ asset('bundles/prayerlabsmyprofile/images/logo.png') }}" alt="Logo" />
            
            <form id="editForm" name="editForm" action="" method="POST" accept-charset="utf-8" {{ form_enctype(form)}}>
                <p>{{ form_errors(form) }}</p>
                <p>
                    {{ form_widget(form.password, {'attr': {'placeholder':'New Password', 'class':'fancyBox password'} } ) }}
                </p>
                <p>
                    {{ form_widget(form.confirm_password, {'attr': {'placeholder':'Confirm New Password', 'class':'fancyBox confirm_password'} } ) }}
                </p>
                <p class="signButtons">
                    <input class="register" type="submit" value="Update" /> 
                    <input class="cancel" type="button" value="Cancel" />
                </p>
                {{ form_rest(form) }}
            </form>
            
    </div>
    <script type="text/javascript">
        $('form').submit(function(){
            if($('.password').val() != $('.confirm_password').val())
                {
                    alert('Password mismatch');
                    return false;
                }
                else if($('.password').val().length < 6)
                {
                    alert('Password length should be minimum 6 characters');
                    return false;
                }
                    
        });
        $('.cancel').click(function(){
            location.href='{{ path('prayerlabs_profile') }}';
        });
    </script>
{% endblock %}