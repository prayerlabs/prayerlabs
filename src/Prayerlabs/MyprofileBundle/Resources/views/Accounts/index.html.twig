{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Accounts list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Place</th>
                <th>Works_at</th>
                <th>Email</th>
                <th>Password</th>
                <th>Salt</th>
                <th>Enabled</th>
                <th>Last_login</th>
                <th>Token</th>
                <th>Verification_requested_at</th>
                <th>Password_requested_at</th>
                <th>Created_at</th>
                <th>Created_from_system</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('prayerlabs_accounts_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.place }}</td>
                <td>{{ entity.worksat }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.password }}</td>
                <td>{{ entity.salt }}</td>
                <td>{{ entity.enabled }}</td>
                <td>{% if entity.lastlogin %}{{ entity.lastlogin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.token }}</td>
                <td>{% if entity.verificationrequestedat %}{{ entity.verificationrequestedat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.passwordrequestedat %}{{ entity.passwordrequestedat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.createdfromsystem }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('prayerlabs_accounts_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('prayerlabs_accounts_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('prayerlabs_accounts_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
